<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardElevation="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        >

        <ImageView
            android:id="@+id/item_carrinho_foto"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/profile"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/item_carrinho_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_carrinho_foto"
            android:layout_marginLeft="10dp"
            android:text="Nome Produto"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/item_carrinho_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qtd X "
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_below="@+id/item_carrinho_nome"
            android:layout_toEndOf="@+id/item_carrinho_foto"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:id="@+id/item_carrinho_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PreÃ§o = "
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_below="@+id/item_carrinho_nome"
            android:layout_toEndOf="@+id/item_carrinho_quantidade"
            />

        <TextView
            android:id="@+id/item_carrinho_preco_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: R$: 2.56"
            android:textColor="#05FA15"
            android:textSize="14sp"
            android:textStyle="bold"

            android:layout_below="@+id/item_carrinho_nome"
            android:layout_toEndOf="@+id/item_carrinho_preco"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:id="@+id/item_carrinho_data_hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionado em 27/22/2019 03/22/55 AM"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_below="@+id/item_carrinho_preco"
            android:layout_toEndOf="@+id/item_carrinho_foto"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/item_carrinho_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_carrinho_foto"
            android:layout_below="@+id/item_carrinho_data_hora"
            android:layout_marginLeft="10dp"
            android:text="Status: Pendente"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/item_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/item_carrinho_foto"
            android:padding="0dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/fundo_gradiente_3"
            >

            <TextView
                android:id="@+id/item_carrinho_editar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:padding="0dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/item_carrinho_remover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remover"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:padding="0dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textAlignment="center"

                />
            <TextView
                android:id="@+id/item_carrinho_enviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:padding="0dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>




<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#CCC4C4"
    tools:context=".vendedor.AdicionarActivity">

    <ImageView
        android:id="@+id/alterar_foto_produto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/select_product_image"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        />

    <ProgressBar
        android:id="@+id/alterar_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_marginBottom="-50dp"
        />

    <EditText
        android:id="@+id/alterar_nome_produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hint="Nome do Produto..."
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/fundo_entrada"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        />
    <EditText
        android:id="@+id/alterar_descricao_produto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:layout_marginTop="5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hint="Descrição"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/fundo_entrada"
        android:gravity="top|left"
        android:lines="4"
        android:textSize="15sp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        />

    <EditText
        android:id="@+id/alterar_preco_produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hint="Preço"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/fundo_entrada"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        />

    <Button
        android:id="@+id/alterar_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alterar Produto"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/fundo_botao"
        />

</LinearLayout>
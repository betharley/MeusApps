<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmarEnviarActivity">

    <TextView
        android:id="@+id/enviar_confirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por favor, confirme os detalhes do seu pedido"
        android:textSize="25sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enviar_confirmar"
        android:layout_marginTop="30dp"
        android:text="Nome do Destinatário:"
        android:layout_marginLeft="25dp"
        android:textSize="16sp"
        android:layout_marginBottom="2dp"
        />
    <EditText
        android:id="@+id/enviar_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_nome"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="15dp"
        android:background="@drawable/fundo_entrada_2"
        />
    <TextView
        android:id="@+id/txt_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enviar_nome"
        android:layout_marginTop="10dp"
        android:text="Telefone do Destinatário:"
        android:layout_marginLeft="25dp"
        android:textSize="16sp"
        android:layout_marginBottom="2dp"
        />
    <EditText
        android:id="@+id/enviar_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_telefone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:padding="15dp"
        android:background="@drawable/fundo_entrada_2"
        />

    <TextView
        android:id="@+id/txt_endereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enviar_telefone"
        android:layout_marginTop="10dp"
        android:text="Descreva o Local de Entrega e Horário:"
        android:layout_marginLeft="25dp"
        android:textSize="16sp"
        android:layout_marginBottom="2dp"
        />

    <EditText
        android:id="@+id/enviar_endereco"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_endereco"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:gravity="top"
        android:padding="15dp"
        android:layout_above="@+id/enviar_botao"
        android:background="@drawable/fundo_entrada_2"
        />

    <Button
        android:id="@+id/enviar_botao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Confirmar"
        android:textStyle="bold"
        android:background="@drawable/fundo_botao"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        />

</RelativeLayout>
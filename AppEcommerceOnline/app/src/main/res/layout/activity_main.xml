<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_gradiente"
    tools:context=".inicio.MainActivity">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/main_texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encontre, Descubra, Escolha \n Compre e Publique Qualquer Coisa \nOnline."
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/main_logo"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/main_usar_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usar Uma Das Contas"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="25dp"
        android:layout_above="@+id/main_contas"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:id="@+id/main_contas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_cadastrar"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >

        <ImageView
            android:id="@+id/main_google"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:src="@drawable/icone_google"
            android:layout_weight="1"
            android:elevation="15dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:src="@drawable/icone_facebook"
            android:layout_weight="1"
            android:elevation="15dp"
            />

    </LinearLayout>


    <Button
        android:id="@+id/main_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Realizar Cadastro"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_above="@+id/main_logar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textAllCaps="false"
        android:background="@drawable/fundo_entrada"
        />



    <Button
        android:id="@+id/main_logar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JÃ¡ tem uma conta ? Conectar"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/fundo_botao"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textAllCaps="false"
        />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_publicar_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produto nome"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            />

        <ImageView
            android:id="@+id/item_publicar_foto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/item_publicar_nome"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:src="@drawable/profile"
            />

        <TextView
            android:id="@+id/item_publicar_data_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data/Hora"
            android:textSize="12sp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/item_publicar_foto"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

         <TextView
            android:id="@+id/item_publicar_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/item_publicar_foto"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/item_publicar_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produto descrição"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/item_publicar_preco"
            android:textColor="@color/colorPrimary"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/item_publicar_descricao"
            >

            <Button
                android:id="@+id/item_publicar_alterar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Alterar"
                style="?attr/buttonBarButtonStyle"
                android:textColor="#FB8C00"
                />
            <Button
                android:id="@+id/item_publicar_remover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remover"
                style="?attr/buttonBarButtonStyle"
                android:textColor="#FB8C00"
                />
            <Button
                android:id="@+id/item_publicar_botao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Publicar"
                style="?attr/buttonBarButtonStyle"
                android:textColor="#FB8C00"
                />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/item_publicar_progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/item_publicar_descricao"
            android:visibility="invisible"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
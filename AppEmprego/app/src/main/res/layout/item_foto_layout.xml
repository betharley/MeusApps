<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_marginBottom="25dp"
    >

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >


    <ImageView
        android:id="@+id/item_galeria_imagem"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:srcCompat="@drawable/profile"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/item_foto_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icone_dislike"

            />
        <TextView
            android:id="@+id/item_likes_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0 Likes"
            android:layout_marginLeft="10dp"
            android:textColor="#403E3E"
            android:textSize="15sp"
            android:gravity="center_vertical"

            />

        <ImageView
            android:id="@+id/item_foto_comentar"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/icone_comentario"
            />
        <TextView
            android:id="@+id/item_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0 ComentÃ¡rios"
            android:layout_marginLeft="10dp"
            android:textColor="#403E3E"
            android:textSize="15sp"
            android:gravity="center_vertical"

            />

    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>
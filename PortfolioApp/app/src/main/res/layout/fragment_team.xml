<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".team.TeamFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VersÃµes do Android"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="#0062AD"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />

        <ImageView
            android:id="@+id/team_android_galeria"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_android_black_24dp"
            android:backgroundTint="#0062AD"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="16dp"
            android:elevation="10dp"
            android:visibility="visible"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/versao1"
        android:layout_marginLeft="16dp"
        android:lineSpacingExtra="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="16dp"
        android:textColor="#171717"
        android:layout_weight="1"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_team"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="#2196F3"
        />

    </LinearLayout>

</ScrollView>
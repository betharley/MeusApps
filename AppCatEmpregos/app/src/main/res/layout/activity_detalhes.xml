<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#418EB3"
    tools:context=".activity.DetalhesActivity">


    <TextView
        android:id="@+id/detalhes_empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Empresa"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        />

    <TextView
        android:id="@+id/detalhes_cargo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cargo"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/detalhe_fundo"
        android:paddingHorizontal="8dp"
        android:layout_weight="1"

        >

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informações"
            android:layout_marginBottom="2dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/detalhes_salario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salario: a combinar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#255E74"
            android:layout_marginBottom="2dp"
            />


        <TextView
            android:id="@+id/detalhes_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: beth@gmail.com"
            android:layout_marginBottom="2dp"
            android:textColor="#255E74"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/detalhes_telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone: (62) 99165-9465"
            android:layout_marginBottom="2dp"
            android:textColor="#255E74"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/detalhes_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Site: www.beth.com.br"
            android:layout_marginBottom="2dp"
            android:textColor="#255E74"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp"
            >
            <TextView
                android:id="@+id/detalhes_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria"

                android:textColor="#255E74"
                android:textStyle="bold"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/detalhes_regiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DF"
                android:textColor="#255E74"
                android:textStyle="bold"
                android:layout_weight="1"
                />
        </LinearLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detalhes_descricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DDDDDD"
                    android:padding="8dp"

                    android:text="@string/cadastro_descricao"
                    android:textColor="#255E74"
                    android:textSize="16sp"

                    />
            </LinearLayout>
        </ScrollView>



    </LinearLayout>
    <TextView
        android:id="@+id/detalhes_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10/07/2019"

        android:gravity="right"
        android:textColor="#FFF"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="2dp"
        />
</LinearLayout>

